                <MenuItem fx:id="castOption" mnemonicParsing="false" text="Medvirkende" />
                <MenuItem fx:id="productionOption" mnemonicParsing="false" text="Produktion" />
                  <MenuItem fx:id="broadcastOption" mnemonicParsing="false" text="Udsendelse" />
              </items>
            </MenuButton>
            <Label fx:id="errorMessage" alignment="CENTER" layoutX="242.0" layoutY="91.0" prefHeight="17.0" prefWidth="242.0" text="Fejlmeddelelse" textFill="#fc0000" />
            <Separator layoutX="231.0" layoutY="112.0" prefHeight="1.0" prefWidth="264.0" />
            <TextArea fx:id="searchString" layoutX="242.0" layoutY="123.0" prefHeight="123.0" prefWidth="242.0" />
      </children>
    </AnchorPane>
      <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label fx:id="userInfo" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Brugernavn" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="11.0" fx:id="x3" />
               </font>
               <textFill>
                  <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
               </textFill>
            </Label>
            <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
            <Label font="$x3" maxWidth="-1.0" text="CredIT Krediteringssystem" textFill="$x4" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
  </children>
