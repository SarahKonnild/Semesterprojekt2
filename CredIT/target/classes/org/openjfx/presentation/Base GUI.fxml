               <items>
                  <MenuItem fx:id="aboutMenu" mnemonicParsing="false" text="Om CredIT" />
               </items></Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="259.0" prefWidth="545.0" VBox.vgrow="ALWAYS">
