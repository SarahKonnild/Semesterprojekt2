            <ListView fx:id="searchList" layoutX="14.0" layoutY="14.0" onMouseClicked="#handleSearchResultClicked" prefHeight="231.0" prefWidth="200.0" />
            <Button fx:id="searchButton" layoutX="438.0" layoutY="57.0" mnemonicParsing="false" onMouseClicked="#handleSearchButtonClicked" prefHeight="27.0" prefWidth="46.0" text="Søg" />
